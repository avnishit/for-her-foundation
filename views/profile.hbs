  <h2 class="text-center" style="color:#2c3e50;">Please Login Or Signup</h2><hr>
  <div class="col-md-1 col-xs-2"></div>
  <div class="col-md-4 col-xs-8">
   <!--div id="login-content" class="modal-content"-->
        <div class="modal-header">
          <!--button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button-->
          <h4 class="modal-title" style="color:#2BCDC1;"><i class="fa fa-unlock-alt"></i> Login</h4>
        </div>
        <div class="modal-body">
          <!-- Social Login -->
          <div class="text-center">
          <p>
            <a class="btn btn-primary social-login-btn social-facebook" href="/auth/facebook"><i class="fa fa-facebook"></i></a>
              <a class="btn btn-primary social-login-btn social-google" href="/auth/google"><i class="fa fa-google-plus"></i></a>
          </p>
          <!--p>
            <a class="btn btn-primary social-login-btn social-linkedin" href="/auth/linkedin"><i class="fa fa-linkedin"></i></a>
            <a class="btn btn-primary social-login-btn social-twitter" href="/auth/twitter"><i class="fa fa-twitter"></i></a>
          </p-->
        </div>
        <small class="text-muted">Or sign in with with Your Account</small><br><br>
         <!-- Custom Login -->
          <form form action="/profile/signin" autocomplete="on" method="post" name="pLoginForm">
            <div class="form-group">
              <input type="text" placeholder="Enter Your Email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control" autocomplete="off" name="passwd" required placeholder="Password">
            </div>
             <div class="loginbox">
              <label><input type="checkbox"><span>Remember me</span></label>
              <button class="btn signin-btn" type="submit">SIGN IN</button>
            </div>
          </form>
        </div>
        <div class="modal-footer footer-box">
          <a href="/profile/resetpasswd">Forgot password ?</a>
          <span>No account ? <a id="signup-btn" href="#">Sign Up.</a></span>
        </div>
      <!--/div-->
      </div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-4 col-xs-8">
        <div class="modal-header">
          <!--button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button-->
          <h4 class="modal-title" style="color:#2BCDC1;"><i class="fa fa-lock"></i> Sign Up</h4>
        </div>
        <div class="modal-body">
          <form form action="/profile/signup" autocomplete="on" method="post" name="pSignUpForm">
            <div class="form-group">
              <input placeholder="*Name" class="form-control" name="name" type="text" required>
            </div>
            <div class="form-group">
              <input placeholder="*Email" class="form-control" name="email" type="email" required>
            </div>
            <div class="form-group">
                <input type="radio" name="gender" value="M" checked placeholder="Male">Male&nbsp;
                <input type="radio" name="gender" value="F">Female&nbsp;
                <input type="radio" name="gender" value="O">Other&nbsp;
            </div>
            <div class="form-group">
              <input placeholder="Phone" class="form-control" name="phone" type="tel">
            </div>
            <div class="form-group">
              <input placeholder="Date Oof Birth" class="form-control" name="dob" type="date" >
            </div>
            <div class="form-group">
              <input type="password" placeholder="*Password" class="form-control" name="passwd" required>
            </div>
            <div class="signupbox">
              <span>Already got account? <a id="login-btn" href="#">Sign In.</a></span>
            </div>
            <div class="loginbox">
              <label><input type="checkbox"><span>Remember me</span><i class="fa"></i></label>
              <button class="btn signin-btn" type="submit">SIGN UP</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-1 col-xs-2"></div>
      </section>
  {{/if}}